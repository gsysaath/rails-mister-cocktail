<div class="container">
  <h1 class="text-center display-1 text-warning"><%= @cocktail.name.upcase %></h1>
  <div class="row">
    <div class="col-12 justify-content-center d-flex">
      <div class="card my-2" style="width: 28rem;">
        <% if @cocktail.photo.attached? %>
          <%= cl_image_tag @cocktail.photo.key, class: "card-img-top" %>
        <% else %>
          <%= image_tag "https://www.unitedstatesofparis.com/wp-content/uploads/2017/12/Secret-8-by-Buddha-Bar-Paris-cocktail-Snowy-Venezia-prosecco-punt-mes-ginger-beer-sirop-maison-saveurs-vin-chaud-hoto-usofparis-blog.jpg", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h4 class="card-title">Composition:</h5>
          <% @cocktail.doses.each do |dose| %>
            <p class="card-text">  <%= dose.description %>
            <%= Ingredient.find(dose.ingredient_id).name %>
            <%= link_to dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" }, class: "ml-3 text-warning" do %>
                    <i class="far fa-trash-alt"></i>
                    <% end %>
                  </p>

          <% end %>
        </div>
      </div>

    </div>
     <div class="col justify-content-center d-flex">
        <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id), class: "mx-1 text-warning text-decoration-none btn btn-outline-warning" %></p>
        <p><%= link_to "Back to index", root_path, class: "mx-1 text-warning text-decoration-none btn btn-outline-warning" %></p>
      </div>
  </div>
</div>
