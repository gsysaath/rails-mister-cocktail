    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-light border-bottom border-warning">
      <%= link_to "VELVET", root_path, class: "navbar-brand text-warning" %>
      <%= link_to "ADD YOUR FANTASY", new_cocktail_path, class: "btn btn-outline-warning ml-2" %>
    </div>
    <%= yield %>
  </body>
</html>
